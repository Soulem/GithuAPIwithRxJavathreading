<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".view.fragment.CommitDisplayFragment"
    android:background="#e7f3ff"
    android:layout_margin="8dp">

    <ImageView
        android:id="@+id/commit_icon_imageview"
        android:layout_width="80dp"
        android:layout_height="80dp"
        android:background="@drawable/ic_commit_icon2"
        android:scaleType="centerCrop"
        android:layout_margin="24dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageView
        android:id="@+id/user_icon_imageview"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:background="@drawable/ic_user_icon"
        app:layout_constraintEnd_toEndOf="@+id/commit_icon_imageview"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/commit_icon_imageview" />

    <TextView
        android:id="@+id/user_name_textView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/default_username"
        android:textColor="@color/black"
        android:textSize="16sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/commit_icon_imageview" />

    <TextView
        android:id="@+id/commit_date_textView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/repo_date_default"
        android:maxLength="10"
        android:textColor="@color/black"
        android:textSize="12sp"
        android:layout_margin="8dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/user_name_textView" />

    <TextView
        android:id="@+id/commit_title_textView"
        android:layout_width="240dp"
        android:layout_height="wrap_content"
        android:textAlignment="center"
        android:maxLines="3"
        android:ellipsize="end"
        android:text="@string/commit_title_tv"
        android:textColor="@color/black"
        android:textSize="16sp"
        android:layout_margin="16dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/commit_date_textView"
        android:gravity="center_horizontal" />

</androidx.constraintlayout.widget.ConstraintLayout>